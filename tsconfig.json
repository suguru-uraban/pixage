{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/firebase",
      "@nuxtjs/axios",
      "nuxt-i18n",
      "jest"
    ],
  },
  "files": [ "src/types/vue-shim.d.ts" ],
  "include": [ "./src/**/**/*.ts", "./src/**/**/*.vue" ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "forceConsistentCasingInFileNames": false,
}
